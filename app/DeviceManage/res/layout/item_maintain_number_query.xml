<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/backgroundRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TableLayout
        android:id="@+id/total_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="50dp" >

        <TableRow
            android:id="@+id/table_total_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_total_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/adress" 
                android:textSize="20sp"/>
            
            <TextView
                android:id="@+id/main_total_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginLeft="30dp"/>
                
        </TableRow>

        <TableRow
            android:id="@+id/table_already"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/text_already"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/already_maintain" 
                android:textSize="20sp"
                android:layout_marginTop="15dp"/>
            
              <TextView
                android:id="@+id/main_already"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"/>
              
        </TableRow>

        <TableRow
            android:id="@+id/table_wait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/text_wait"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wait_maintain" 
                android:textSize="20sp"
                android:layout_marginTop="15dp"/>
            
             <TextView
                android:id="@+id/main_wait"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"/>
            
        </TableRow>
        
    </TableLayout>

</RelativeLayout>