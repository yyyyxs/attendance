<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_frame"
    android:orientation="vertical" >

    <include
        android:id="@+id/mainHead"
        layout="@layout/head_item" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp" >

        <TextView
            android:id="@+id/tv_device_num_repairreport"
            style="@style/stockContent"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:text="@string/apply_record" />

        <TextView
            android:id="@+id/tv_et_device_num_repairreport"
            style="@style/stockContent"
            android:layout_alignBottom="@id/tv_device_num_repairreport"
            android:layout_toRightOf="@id/tv_device_num_repairreport" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp" >

        <TextView
            android:id="@+id/tv_deivce_name_repairreport"
            style="@style/stockContent"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:text="@string/device_name" />

        <TextView
            android:id="@+id/tv_et_deivce_name_repairreport"
            style="@style/stockContent"
            android:layout_alignBottom="@id/tv_deivce_name_repairreport"
            android:layout_toRightOf="@id/tv_deivce_name_repairreport" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp" >

        <TextView
            android:id="@+id/tv_device_type_repairreport"
            style="@style/stockContent"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:text="@string/device_type" />

        <TextView
            android:id="@+id/tv_et_device_type_repairreport"
            style="@style/stockContent"
            android:layout_alignBottom="@id/tv_device_type_repairreport"
            android:layout_toRightOf="@id/tv_device_type_repairreport" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp" >

        <TextView
            android:id="@+id/tv_device_user_repairreport"
            style="@style/stockContent"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:text="@string/device_user" />

        <TextView
            android:id="@+id/tv_et_device_user_repairreport"
            style="@style/stockContent"
            android:layout_alignBottom="@id/tv_device_user_repairreport"
            android:layout_toRightOf="@id/tv_device_user_repairreport" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp" >

        <TextView
            android:id="@+id/tv_device_deal_status"
            style="@style/stockContent"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:text="@string/device_deal_status" />

        <TextView
            android:id="@+id/tv_et_device_deal_status"
            style="@style/stockContent"
            android:layout_alignBottom="@id/tv_device_deal_status"
            android:layout_toRightOf="@id/tv_device_deal_status" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp" >

        <TextView
            android:id="@+id/tv_device_repair_cost"
            style="@style/stockContent"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:text="@string/device_repair_cost" />

        <TextView
            android:id="@+id/tv_et_device_repair_cost"
            style="@style/stockContent"
            android:layout_alignBottom="@id/tv_device_repair_cost"
            android:layout_toRightOf="@id/tv_device_repair_cost" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp" >

        <TextView
            android:id="@+id/tv_device_change"
            style="@style/stockContent"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:text="@string/device_change" />

        <TextView
            android:id="@+id/tv_et_device_change"
            style="@style/stockContent"
            android:layout_alignBottom="@id/tv_device_change"
            android:layout_toRightOf="@id/tv_device_change" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp" >

        <TextView
            android:id="@+id/tv_device_repair_result"
            style="@style/stockContent"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:text="@string/device_repair_result" />

        <TextView
            android:id="@+id/tv_et_device_repair_result"
            style="@style/stockContent"
            android:layout_toRightOf="@id/tv_device_repair_result" />
    </RelativeLayout>

</LinearLayout>