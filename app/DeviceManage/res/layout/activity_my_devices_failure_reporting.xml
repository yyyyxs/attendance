<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/backgroundRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        android:id="@+id/mainHead"
        layout="@layout/head_item" />

    <LinearLayout
        android:id="@+id/falReporting_detail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mainHead"
        android:background="@color/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/fri_device_id"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp" >

            <TextView
                android:id="@+id/tet_fri_device_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/device_order_num"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edt_fri_device_id"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@id/tet_fri_device_id" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fri_device_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp" >

            <TextView
                android:id="@+id/tet_fri_device_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/device_name"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edt_fri_device_name"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@id/tet_fri_device_name" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fri_device_type"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp" >

            <TextView
                android:id="@+id/tet_fri_device_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/device_type"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edt_fri_device_type"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@id/tet_fri_device_type" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fri_device_user"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp" >

            <TextView
                android:id="@+id/tet_fri_fri_device_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/device_user"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edt_fri_device_user"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@id/tet_fri_fri_device_user" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fri_applytime"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp" >

            <TextView
                android:id="@+id/tet_fri_applytime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/applytime"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edt_fri_applytime"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@id/tet_fri_applytime"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fri_applydescribe"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp" >

            <TextView
                android:id="@+id/tet_fri_applydescribe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/repair_describe"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edt_fri_applydescribe"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tet_fri_applydescribe"
                android:layout_margin="5dp"
                android:background="@drawable/bg_border"
                android:gravity="left|top"
                android:maxLines="3"
                android:minLines="3"
                android:scrollbars="vertical"
                android:singleLine="false" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/fri_submit"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/falReporting_detail"
        android:layout_marginLeft="10dp"
        android:background="@drawable/big_button_on_off"
        android:text="@string/reporting"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/fri_cancel"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/falReporting_detail"
        android:layout_marginRight="10dp"
        android:background="@drawable/big_button_on_off"
        android:text="@string/cancel"
        android:textColor="@color/white"
        android:textSize="20sp" />

</RelativeLayout>