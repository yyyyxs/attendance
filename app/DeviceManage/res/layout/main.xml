<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <Button
        android:id="@+id/btn_scan_barcode"
        style="@style/bigButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/Open_camara" />

    <LinearLayout
        android:id="@+id/search_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical" 
        android:visibility="gone"
      >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp" >

            <TextView
                android:id="@+id/code_search_id"
                style="@style/stockContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:text="@string/device_order_num" />

            <TextView
                android:id="@+id/search_id"
                style="@style/stockContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/code_search_id"
                android:layout_toRightOf="@id/code_search_id" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp" >

            <TextView
                android:id="@+id/code_search__name"
                style="@style/stockContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:text="@string/device_name" />

            <TextView
                android:id="@+id/search_name"
                style="@style/stockContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/code_search__name"
                android:layout_toRightOf="@id/code_search__name" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp" >

            <TextView
                android:id="@+id/code_search_place"
                style="@style/stockContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:text="@string/device_position" />

            <TextView
                android:id="@+id/search_place"
                style="@style/stockContent"
                android:layout_alignBottom="@id/code_search_place"
                android:layout_toRightOf="@id/code_search_place" />
        </RelativeLayout>

          <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp" >

            <TextView
                android:id="@+id/code_search_user"
                style="@style/stockContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:text="@string/device_user" />

            <TextView
                android:id="@+id/search_user"
                style="@style/stockContent"
                android:layout_alignBottom="@id/code_search_user"
                android:layout_toRightOf="@id/code_search_user" />
        </RelativeLayout>
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp" >

            <TextView
                android:id="@+id/code_search_type"
                style="@style/stockContent"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:text="@string/device_type" />

            <TextView
                android:id="@+id/search_type"
                style="@style/stockContent"
                android:layout_alignBottom="@id/code_search_type"
                android:layout_toRightOf="@id/code_search_type" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp" >

            <TextView
                android:id="@+id/code_search_state"
                style="@style/stockContent"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:text="@string/device_status" />

            <TextView
                android:id="@+id/search_state"
                style="@style/stockContent"
                android:layout_alignBottom="@id/code_search_state"
                android:layout_toRightOf="@id/code_search_state" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp" >

            <TextView
                android:id="@+id/code_search_buytime"
                style="@style/stockContent"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:text="@string/device_buy_time" />

            <TextView
                android:id="@+id/search_buytime"
                style="@style/stockContent"
                android:layout_alignBottom="@id/code_search_buytime"
                android:layout_toRightOf="@id/code_search_buytime" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp" >

            <Spinner
                android:id="@+id/code_search_information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:textColor="#6D6D6D"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/search_information"
                style="@style/stockContent"
                android:layout_alignBottom="@id/code_search_information"
                android:layout_toRightOf="@id/code_search_information"
                android:textSize="20sp" />
        </RelativeLayout>
            <Button
        android:id="@+id/btn_operate_barcode"
        style="@style/bigButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="操作" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:layout_margin="10dp">
       <!--  android:background="@drawable/tupian"-->
        
         <ImageView 
        android:id="@+id/bk_search"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/tupian"
        />
    </LinearLayout  >
   
</LinearLayout>